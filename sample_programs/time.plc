def <display_time>
{
  clear();
  putd(time('m'));
  putch('/');
  putd(time('d'));
  putch('/');
  if(time('Y') < 10)
    putd(0);
  putd(time('Y'));
  if(time('m') < 10)
    cr();
  putd(time('H'));
  putch(':');
  if(time('M') < 10)
    putd(0);
  putd(time('M'));
  putch(':');
  if(time('S') < 10)
    putd(0);
  putd(time('S'));
}

def <sig_action>
{
  clear();
  unlock();
  sprint("DONE!");
  exit(0);
}



/**
 * This is a program that will display the date
 */
def <main>
{
  signal(SIGINT,<sig_action>);
  lock();
  seconds = time('S'); 
  breakit = 1;
  call <display_time>;
  while(breakit == 1)/* Ctrl-D */
    {
      if(time('S') == seconds)
	continue;
      call <display_time>;
      seconds = time('S');
    }
}
