/**
 * Forces 2 digits to be used.
 */
def <two_digit>
{
  two_digit = pop();
  if(two_digit < 10)
    {
      putd(0);
    }
  putd(two_digit);
}

/**
 * This is a program that will display the date
 */
def <main>
{
  should_quit = 'n';
  while(should_quit != 0x4)/* Ctrl-D */
    {
      clear();
      putd(time('m'));
      putch('/');
      putd(time('d'));
      cr();
      putd(time('H'));
      putch(':');
      time('M');
      call <two_digit>;
      should_quit = getch();
    }
}
